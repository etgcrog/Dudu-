import math
an = float(input("Digite um ângulo:"))
seno = math.sin(math.radians(an))
print("O angulo de {}º tem o SENO de {:.2f}".format(int(an), seno))
co = math.cos(math.radians(an))
print("O angulo de {}° tem o COSSENO de {:.2f}".format(int(an), co))
ta = math.tan(math.radians(an))
print("O angulo de {}° tem a TANGENTE de {:.2f}".format(int(an), ta))
